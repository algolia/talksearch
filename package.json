{
  "name": "talksearch",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "NODE_ENV=development node src/talksearch-docgen/start.js",
    "docs:build": "NODE_ENV=production node src/talksearch-docgen/build.js",
    "docs:update": "ROOT_PATH=/talksearch/ yarn docs:build && doctoc --maxlevel 2 README.md",
    "docs:test-build": "ROOT_PATH=/ yarn docs:build && http-server docs/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "yarn lint && yarn docs:build && git checkout docs && git clean -f docs"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "doctoc": "1.3.1",
    "eslint": "4.18.2",
    "eslint-config-algolia": "13.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "http-server": "0.11.1",
    "prettier": "1.11.1"
  },
  "engines": {
    "node": "^9.2.0",
    "yarn": "^1.3.2"
  },
  "renovate": {
    "extends": [
      "config:application",
      "schedule:weekends",
      ":automergeMinor",
      ":automergeBranchPush",
      ":semanticCommits",
      ":rebaseStalePrs",
      ":timezone(Europe/Paris)"
    ]
  },
  "workspaces": [
    "src/*"
  ],
  "license": "MIT",
  "author": "Algolia, Inc. (https://www.algolia.com)"
}
